<%= form_for(@product,:url => url_for({controller: :product, action: :create}), remote: true) do |f| %>
    <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control' %>
    </div>

    <div class="mb-3">
        <%= f.label :price %>
        <%= f.number_field :price, step: :any, class:'form-control' %>
    </div>

    <div class="mb-3">
        <%= f.fields_for :product_features do |t| %>
            <%= render "product_feature_fields", :f => t %>
        <% end %>
        
        <div class="mb-3">
            <%= link_to_add_association "Add Feature", f, :product_features %>
        </div>
    </div>

    <div class="mb-3">
        <%= f.fields_for :product_identifiers do |t| %>
            <%= render "product_identifier_fields", :f => t %>
        <% end %>
        
        <div class="mb-3">
            <%= link_to_add_association "Add Identifiers", f, :product_identifiers %>
        </div>
    </div>
    
    <div class="mb-3">
        <%= f.submit "Sumbit", class:'btn btn-primary' %>
        <button class="btn btn-danger" onClick='closeForm()'>Cancel</button>
    </div>

<% end %>