
        <%= form_for(obj,:url => url_for(routing)) do |f| %>
        <div class='row'>
            <div class='col-md-6'>
        
                 <div class="form-group">
                     <%= f.label :first_name %>
                     <%= f.text_field :first_name, class: "form-control"%>
                 </div>

                 <div class="form-group">
                     <%= f.label :middle_name %>
                     <%= f.text_field :middle_name, class: "form-control"%>
                 </div>

                 <div class="form-group">
                     <%= f.label :last_name %>
                     <%= f.text_field :last_name, class: "form-control"%>
                 </div>
                 <div class="form-group">
                     <%= f.label :dob %>
                     <%= f.date_field :dob, class: "form-control"%>
                 </div>
                </div>
                <div class='col-md-6'>
                <br>
                    <div class="form-group">
                        <%= f.label :gender %>&nbsp;&nbsp;
                        <%= f.radio_button :gender, '1' %> Male &nbsp;
                        <%= f.radio_button :gender, '2' %> Female
                    </div>
                    <div class="form-group">
                        <%= f.label :country_code %>
                        <%= f.text_field :country_code, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :contact_number %>
                        <%= f.text_field :contact_number,class: "form-control" %>
                    </div>
                        <%= f.submit "Sumbit", class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>