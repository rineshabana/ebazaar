<%if flash[:error]%>
    new Noty({theme:'metroui', timeout: 1000, type: 'error',layout: 'topCenter',text: '<%= flash[:error]%>'}).show();
<%else%>
    $('#address-<%= @address.id %>').html('<%= j render partial: "address-card",locals: {addr: @address}%>');
    new Noty({theme:'metroui', timeout: 1000, type: 'success',layout: 'topCenter',text: '<%= flash[:success]%>'}).show();
    $('html, body').animate({
        scrollTop: $("#address-<%= @address.id %>").offset().top
    }, 500);
<%end%>
